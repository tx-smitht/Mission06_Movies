@{
    ViewData["Title"] = "Movie Entry Form";
}

@model MovieFormResponse
 
<div class="text-center">
    <h1 class="display-4">Movie Entry Form</h1>

    @* Movie Entry form *@
    <div style="text-align:left">
        <form method="post">


            <label asp-for="Title">Title</label>
            <input asp-for="Title" /><br />

            <label asp-for="Year">Year</label>
            <input asp-for="Year" /><br />

            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId">
                @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
            </select><br />

            <label asp-for="Director">Director</label>
            <input asp-for="Director" /><br />

            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select><br />

            <label asp-for="Edited">Edited</label>
            <input asp-for="Edited" /><br />

            <label asp-for="LentTo">LentTo</label>
            <input asp-for="LentTo" /><br />

            <label asp-for="Notes">Notes</label>
            <input asp-for="Notes" maxlength="25" /><br />
           
            @* Hidden tag so that we can share the edit and the add page. *@
            <input type="hidden" asp-for="MovieID" />

            <button type="submit">Submit</button>

        </form>

        <div asp-validation-summary="All"></div>
    </div>
</div>
